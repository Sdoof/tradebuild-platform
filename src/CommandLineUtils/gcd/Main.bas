Public Sub main()
Dim clp As CommandLineParser

InitialiseTWUtilities

Set gCon = GetConsole

Set clp = CreateCommandLineParser(Command)

If clp.Switch("?") Or _
    clp.NumberOfArgs > 0 Or _
    clp.NumberOfSwitches = 0 _
Then
    showUsage
ElseIf clp.Switch("fromdb") Then
    setupDbServiceProvider clp.switchValue("fromdb")
ElseIf clp.Switch("fromtws") Then
    setupTwsServiceProvider clp.switchValue("fromtws")
Else
    showUsage
End If
    


End Sub

