Public Function eos() As Boolean
eos = mInPosn > Len(mStr)
End Function

Friend Sub initialise( _
                value As String)
mStr = value
End Sub

Public Function nextChar() As String
mInPosn = mInPosn + 1
If Not eos Then
    nextChar = Mid$(mStr, mInPosn, 1)
End If
End Function

Public Function peekChar() As String
mInPosn = mInPosn + 1
If Not eos Then
    peekChar = Mid$(mStr, mInPosn, 1)
End If
mInPosn = mInPosn - 1
End Function

